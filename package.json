{
	"name": "pixijs-boilerplate",
	"version": "1.0.16",
	"description": "Boilerplate for PixiJS + TS project",
	"main": "index.ts",
	"scripts": {
		"local": "webpack serve --config-name local",
		"dev": "webpack --config-name dev",
		"prod": "webpack --config-name prod",
		"prepare": "husky install",
		"test": "echo hi",
		"lint:fix-all": "eslint . --fix && prettier . -w",
		"check": "eslint . && prettier . -c"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.json": [
			"prettier --write"
		]
	},
	"engines": {
		"npm": ">=8.0.0",
		"node": ">=16.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/falkura/PixiJS-Boilerplate.git"
	},
	"keywords": [
		"pixi.js"
	],
	"author": "Vlad Kyiashko",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/falkura/PixiJS-Boilerplate/issues"
	},
	"homepage": "https://github.com/falkura/PixiJS-Boilerplate#readme",
	"dependencies": {
		"@types/animejs": "^3.1.1",
		"@types/howler": "^2.2.2",
		"animejs": "^3.2.1",
		"fontfaceobserver": "^2.1.0",
		"howler": "^2.2.1",
		"pixi-spine": "^2.1.10",
		"pixi.js": "^5.3.3",
		"tslib": "^2.3.1",
		"typescript": "^4.7.4",
		"webpack": "^5.39.0",
		"webpack-cli": "^4.10.0",
		"webpack-dev-server": "^4.9.3"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.33.0",
		"@typescript-eslint/parser": "^5.33.0",
		"clean-webpack-plugin": "^3.0.0",
		"copy-webpack-plugin": "^9.0.0",
		"eslint": "^8.21.0",
		"eslint-config-prettier": "^8.5.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"raw-loader": "^4.0.2",
		"ts-loader": "^9.3.1",
		"url-loader": "^4.1.1"
	}
}
